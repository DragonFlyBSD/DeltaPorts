
CXXFLAGS+=	-Wno-deprecated-declarations

.if ${PORTVERSION} == 0.11.r2979
USES:=	${USES:Nssl}
BUILD_DEPENDS+=	libressl-static>0:security/libressl-static
OPENSSLINC:=	${LOCALBASE}/libressl-static/include
OPENSSLLIB:=	${LOCALBASE}/libressl-static/lib
LIBS+=	-lssl -lcrypto

dfly-patch:
	${REINPLACE_CMD} -e 's,-lcrypto -lssl,-lssl -lcrypto,g' \
		${WRKSRC}/qdbm/LTmakefile
	${REINPLACE_CMD} -e 's,-lssl ,& -lcrypto,g' \
		${WRKSRC}/configure
.endif
